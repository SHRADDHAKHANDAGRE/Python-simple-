count = 0

print("Wcome to my computer quiz!")

playing = input("Do you want to play? ")

if(playing != "yes"):
    print("It's Okay!")
    quit()
else:
    print("Let's start the quiz! ")
    print("if you choose the correct option then you will gwt 5 points...")
    print("Otherwise no points")

    n = input("For start the quiz press 'y' :")

    if n == 'y':
        print("Okay! Let's play :)")

        print("1)  Who is the father of Computers?")
        print("Options:")
        print('''
         a) James Gosling
         b) Charles Babbage
         c) Dennis Ritchie
         d) Bjarne Stroustrup''')
        ans  = input("Write correct option a,b,c,d : ")
        if ans == "b":
            count= count + 5


        print("2)  Which of the following is the correct abbreviation of COMPUTER?")
        print("Options:")
        print('''
         a) Commonly Occupied Machines Used in Technical and Educational Research
         b) Commonly Operated Machines Used in Technical and Environmental Research
         c) Commonly Oriented Machines Used in Technical and Educational Research
         d) Commonly Operated Machines Used in Technical and Educational Research''')
        ans  = input("Write correct option a,b,c,d : ")
        if ans == "d":
            count= count + 5


        print("3)  Which of the following is the correct definition of Computer?")
        print("Options:")
        print('''
         a) Computer is a machine or device that can be programmed to perform arithmetical or logic operation sequences automatically
         b) Computer understands only binary language which is written in the form of 0s & 1s
         c) Computer is a programmable electronic device that stores, retrieves, and processes the data
         d) All of the mentioned''')
        ans  = input("Write correct option a,b,c,d : ")
        if ans == "d":
            count= count + 5


        print("4) What is the full form of CPU?")
        print("Options:")
        print('''
          a) Computer Processing Unit
          b) Computer Principle Unit
          c) Central Processing Unit
          d) Control Processing Unit''')
        ans  = input("Write correct option a,b,c,d : ")
        if ans == "c":
            count= count + 5


        print("5) Which of the following language does the computer understand?")
        print("Options:")
        print('''
         a) Computer understands only C Language
         b) Computer understands only Assembly Language
         c) Computer understands only Binary Language
         d) Computer understands only BASIC''')
        ans  = input("Write correct option a,b,c,d : ")
        if ans == "c":
            count= count + 5

print("Quiz Finished!")
print("Your total score are: ",count," out of 25")
print("Thank you!")
